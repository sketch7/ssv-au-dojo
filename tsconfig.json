{
	"compilerOptions": {
		"module": "amd",
		"moduleResolution": "node",
		"target": "es5",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": false,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": "src",
		"paths": {
			"app": ["app/app.state", "app/app.const"],
			"comps": ["app/components/index"]
		},
		"lib": [
			"es2015",
			"dom"
		]
	},
	"include": [
		"src/**/*",
		"typings/**/*"
	],
	"exclude": [
		"node_modules",
		"wwwroot",
		"dist"
	]
}